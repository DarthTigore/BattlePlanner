<Window x:Class="BattlePlanner.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattlePlanner"
        mc:Ignorable="d"
        Title="Processing Platoons..." Height="95" Width="300" Background="DarkGray" ResizeMode="NoResize" Closing="Window_Closing" Icon="/BattlePlanner;component/Resources/Process.ico">
    <Grid Margin="20,0,20,0">
        <Label x:Name="labelDesc" Content="Test" VerticalAlignment="Top"/>
        <ProgressBar x:Name="pbStatus" Minimum="0" Maximum="100" Value="75" Height="25" VerticalAlignment="Bottom" Margin="0,10,0,10"/>
        <TextBlock Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0.00}%}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,15"/>
    </Grid>
</Window>
