<UserControl x:Class="BattlePlanner.MatchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlePlanner"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="105">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image x:Name="AskImage" Width="50" Height="50" />
                <Image x:Name="MatchImage" Width="50" Height="50" Margin="5,0,0,0" />
            </StackPanel>
            <Label x:Name="labelDesc" HorizontalAlignment="Center" Content="Zone 1: 1-1"/>
        </StackPanel>
    </Grid>
</UserControl>
